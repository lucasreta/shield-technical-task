{
  "info": {
    "name": "Shield API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth - Sign Up",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "http://localhost:3000/signup",
          "protocol": "http",
          "host": [
            "localhost:3000"
          ],
          "path": [
            "signup"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"password123\"\n}"
        }
      }
    },
    {
      "name": "Auth - Sign In",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "http://localhost:3000/signin",
          "protocol": "http",
          "host": [
            "localhost:3000"
          ],
          "path": [
            "signin"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"password123\"\n}"
        }
      }
    },
    {
      "name": "Wallets - Get All",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "http://localhost:3000/wallets",
          "protocol": "http",
          "host": [
            "localhost:3000"
          ],
          "path": [
            "wallets"
          ]
        }
      }
    },
    {
      "name": "Wallets - Create",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "http://localhost:3000/wallets",
          "protocol": "http",
          "host": [
            "localhost:3000"
          ],
          "path": [
            "wallets"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"tag\": \"Main\",\n  \"chain\": \"Ethereum\",\n  \"address\": \"0x123abc\"\n}"
        }
      }
    },
    {
      "name": "Wallets - Get by ID",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "http://localhost:3000/wallets/:id",
          "protocol": "http",
          "host": [
            "localhost:3000"
          ],
          "path": [
            "wallets",
            ":id"
          ]
        }
      }
    },
    {
      "name": "Wallets - Update by ID",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "http://localhost:3000/wallets/:id",
          "protocol": "http",
          "host": [
            "localhost:3000"
          ],
          "path": [
            "wallets",
            ":id"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"tag\": \"Updated\",\n  \"chain\": \"Ethereum\",\n  \"address\": \"0x456def\"\n}"
