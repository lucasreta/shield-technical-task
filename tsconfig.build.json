{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "noEmit": false,       // ensure tsc emits files
    "declaration": true,   // generate .d.ts files
    "emitDeclarationOnly": false,
    "removeComments": true
  },
  "include": ["src"],
  "exclude": ["**/*.test.ts", "**/__tests__/**", "**/__mocks__/**", "test", "node_modules"]
}
